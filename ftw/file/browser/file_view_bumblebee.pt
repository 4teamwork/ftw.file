<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ftw.file">

<head>
<metal:css fill-slot="style_slot">
    <link rel="stylesheet" type="text/css" href="++resource++ftw.file-uploader.css">
</metal:css>

<metal:js fill-slot="javascript_head_slot" tal:condition="view/can_edit">
    <script src="++resource++ftw.file-progress.js"></script>
    <script src="++resource++ftw.file-uploader.js"></script>
    <script src="++resource++ftw.file-main.js"></script>
</metal:js>


</head>

<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
        <div tal:condition="view/can_edit" id="dropzone">
            <p id="dropzone-replacement-warning" i18n:translate="">You're about to replace the existing file.<br />Press ESC to abort.</p>
            <div class="progress-radial" id="uploadprogress">
            </div>
            <img id="ftw-file-upload" src="++resource++ftw.file-upload.png" />
        </div>

        <!-- TAL expressions are not evaluated inside script tags. -->
        <script tal:content="string:var context_url = '${context/absolute_url}'"></script>

        <div class="filePreview" tal:content="structure context/file_preview"></div>

    </metal:content-core>
</metal:content-core>

</body>
</html>
